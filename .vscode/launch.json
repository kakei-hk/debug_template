{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: run example script",
            "type": "debugpy",
            "request": "launch",
            "program": "pydebug_template/example/example.py",
            "args": [
                "--matrix-size",
                "8",
                "--fix-seeds",
                "--seeds",
                "11",
                "101"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "C++: Current File",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/build/${fileBasenameNoExtension}.out",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}"
        }
    ]
}